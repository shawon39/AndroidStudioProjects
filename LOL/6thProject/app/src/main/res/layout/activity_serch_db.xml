<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#6897bb">

    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="#c0c0c0"
        android:id="@+id/editText"
        android:textColor="#191919"
        android:layout_alignBottom="@+id/buttonSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Name. . ."
        android:textColorHint="#666666"
        android:paddingLeft="4dp"
        android:layout_alignTop="@+id/buttonSearch" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="120dp"
        android:textColor="#f0f8ff"
        android:text="Search "
        android:layout_height="60dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginTop="14dp"
        android:onClick="searchContact"/>

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:gravity="left"
        android:textColor="#333333"
        android:text="Email Here"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/displayMobile"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:textColor="#333333"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:text="Mobile Here"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="57dp"
        android:text="Delete Contact"
        android:layout_below="@+id/displayMobile"
        android:layout_centerHorizontal="true"
        android:onClick="deleteContact"/>

</RelativeLayout>
